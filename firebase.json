
{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/tools/**",
        "destination": "/index.html"
      },
       {
        "source": "/categories", // Rewrite /categories path itself
        "destination": "/index.html"
      },
      {
        "source": "/categories/**", // Rewrite specific category pages
         "destination": "/index.html" // Serve index.html for client-side routing
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
     "cleanUrls": true, // Enable clean URLs (removes .html extension)
     "trailingSlash": false // Optional: removes trailing slashes
  }
}
