
{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/tools/**",
        "destination": "/index.html"
      },
       {
        "source": "**",
        "destination": "/index.html"
      }
    ],
     "cleanUrls": true,
     "trailingSlash": false
  }
}

